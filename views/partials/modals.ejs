<script>
  function update() {
    var name = $("#editUserModal #name").val();
    var id = $("#editUserModal #id").val();
    var site = $("#editUserModal #site").children("option:selected").val();
    var type = $("#editUserModal #type").children("option:selected").val();
    var department = $("#editUserModal #department").val();
    var phone = $("#editUserModal #phone").val();
    var email = $("#editUserModal #email").val();
    $.ajax({
      url: "http://127.0.0.1:3000/api/users/" + id,
      method: "patch",
      data: {
        name: name,
        department: department,
        phone: phone,
        email: email,
        access: {
          site: site,
          type: type,
        },
      },
      success: function (response) {
        $("#table").bootstrapTable("refresh");
        $("#editUserModal").modal("toggle");
        Toast.fire({
          type: "success",
          title: name + "'s account updated successfully",
        });
      },
    });
  }

  function deletee() {
    var id = $("#deleteUserModal #id").val();
    $.ajax({
      url: "http://127.0.0.1:3000/api/users/" + id,
      method: "delete",
      success: function (response) {
        $("#table").bootstrapTable("refresh");
        $("#deleteUserModal").modal("toggle");
        Toast.fire({
          type: "success",
          title: "Account Deleted successfully",
        });
      },
    });
  }
</script>
