  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('partials/navBar') %>

      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('partials/sideBar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Accounts</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">Accounts</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-12">
              <!-- /.card -->

              <div class="card card-outline card-danger">
                <div class="card-header">
                  <div class="card-title"><h3>All Accounts</h3></div>

                  <div class="card-tools">
                    <button
                      type="button"
                      class="btn btn-tool"
                      data-card-widget="collapse"
                    >
                      <i class="fas fa-minus"></i>
                    </button>
                  </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <div id="toolbar">
                    <a href="/register" target="_blank">
                      <button
                        id="add"
                        class="btn btn-block btn-outline-success"
                      >
                        <i class="glyphicon glyphicon-add"></i> Add
                      </button></a
                    >
                  </div>
                  <table
                    id="table"
                    data-toolbar="#toolbar"
                    data-search="true"
                    data-show-refresh="true"
                    data-show-toggle="true"
                    data-show-fullscreen="true"
                    data-show-columns="true"
                    data-show-columns-toggle-all="true"
                    data-show-print="true"
                    data-show-export="true"
                    data-click-to-select="true"
                    data-minimum-count-columns="2"
                    data-show-pagination-switch="true"
                    data-pagination="true"
                    data-id-field="id"
                    data-page-list="[5, 10, 25, all]"
                    data-show-footer="true"
                    data-url="http://127.0.0.1:3000/api/users"
                    data-response-handler="responseHandler"
                  ></table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
      </aside>
      <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="assets/plugins/jquery/jquery.min.js"></script>
    <!-- bootstrap-table  -->
    <script src="assets\plugins\bootstrap-table\dist\bootstrap-table.min.js"></script>

    <script src="assets\plugins\bootstrap-table\dist\extensions\export\bootstrap-table-export.min.js"></script>
    <script src="assets\plugins\bootstrap-table\dist\extensions\print\bootstrap-table-print.min.js"></script>

    <!-- Bootstrap 4 -->
    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets\plugins\jquery-tableExport\tableExport.min.js"></script>
    <script src="assets\plugins\jquery-tableExport\libs\jsPDF\jspdf.min.js"></script>
    <script src="assets\plugins\jquery-tableExport\libs\jsPDF-AutoTable\jspdf.plugin.autotable.js"></script>

    <!-- sweetalert2  -->
    <script src="/assets/plugins/sweetalert2/sweetalert2.js"></script>
    <!-- hikma dashboard  -->
    <script src="/assets/dist/js/pages/dashboard.js"></script>

    <!-- hikma App -->
    <script src="assets/dist/js/adminlte.min.js"></script>
    <!-- hikma for demo purposes -->
    <script src="assets/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
      $("#accountNav").addClass("active");
      $("#managementNav").addClass("active");
      var $table = $("#table");

      var $add = $("#add");

      function responseHandler(res) {
        $.each(res.rows, function (i, row) {
          row.state = $.inArray(row.id, selections) !== -1;
        });
        return res;
      }

      function operateFormatter(value, row, index) {
        if (row.access.type === "admin")
          return [
            '<div class="btn-group btn-group-sm">',
            ' <a href="#" class="btn btn-info" id="edit"><i class="fas fa-edit"></i></a>',
            "</div>",
          ].join("");
        else
          return [
            '<div class="btn-group btn-group-sm">',
            ' <a href="#" class="btn btn-info" id="edit"><i class="fas fa-edit"></i></a>',
            '<a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>',
            "</div>",
          ].join("");
      }
      function typeFormatter(value, row, index) {
        var classs;
        var access = value.toUpperCase();
        switch (access) {
          case "ADMIN": {
            classs = "bg-success";
            break;
          }

          case "USER":
            classs = "bg-info";
            break;
          case "PRODUCTION":
            classs = "bg-warning";
            break;
          case "MANAGER":
            classs = "bg-primary";
            break;
          case "READONLY":
            classs = "bg-secondary";
            break;
          case "SUPERVISOR":
            classs = "bg-danger";
            break;
          default:
          // code block
        }
        return [
          '<span class="badge ' + classs + '">',
          access.toUpperCase(),
          "</span>",
        ].join("");
      }
      function siteFormatter(value, row, index) {
        if (value.toLowerCase() === "iab")
          return ["<img src='/assets/dist/img/iab.jpg'></img>"].join("");
        else if (value.toLowerCase() === "medicef")
          return ["<img src='/assets/dist/img/medicef.jpg'></img>"].join("");
        else
          return [
            "<img src='/assets/dist/img/medicef.jpg'></img><img src='/assets/dist/img/iab.jpg'></img>",
          ].join("");
      }

      window.operateEvents = {
        "click .btn-info": function (e, value, row, index) {
          console.log(row);
          $("#editUserModal #name").val(row.name);
          $("#editUserModal #id").val(row.id);
          $("#editUserModal #site").val(row.site_id);
          $("#editUserModal #type").val(row.access.toUpperCase());
          $("#editUserModal #department").val(row.dep_id);
          $("#editUserModal #phone").val(row.phone);
          $("#editUserModal #email").val(row.email);

          $("#editUserModal").modal("toggle");
        },
        "click .btn-danger": function (e, value, row, index) {
          const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
              confirmButton: "btn btn-success",
              cancelButton: "btn btn-danger",
            },
            buttonsStyling: false,
          });

          swalWithBootstrapButtons
            .fire({
              title: "Are you sure ?",
              text: row.name + "  will be deleted and lose access !",
              icon: "warning",
              showCancelButton: true,
              confirmButtonText: "Yes, delete it!",
              cancelButtonText: "No, cancel!",
              reverseButtons: true,
            })
            .then((result) => {
              if (result.value) {
                $.ajax({
                  url: "http://127.0.0.1:3000/api/users/" + row.id,
                  method: "delete",
                  success: function (response) {
                    $("#table").bootstrapTable("refresh");
                    swalWithBootstrapButtons.fire(
                      "Deleted!",
                      "this account has been deleted.",
                      "success"
                    );
                  },
                });
              } else if (
                /* Read more about handling dismissals below */
                result.dismiss === Swal.DismissReason.cancel
              ) {
                swalWithBootstrapButtons.fire(
                  "Cancelled",
                  "this account is safe",
                  "error"
                );
              }
            });
        },
      };

      function totalTextFormatter(data) {
        return "Total";
      }

      function totalNameFormatter(data) {
        return data.length;
      }

      function initTable() {
        $table.bootstrapTable("destroy").bootstrapTable({
          exportTypes: ["json", "xml", "csv", "txt", "sql", "excel", "pdf"],
          exportDataType: "all",
          exportOptions: {
            fileName: "Accounts",
            ignoreColumn: [5],
            jspdf: {
              format: "a4",
              margins: { left: 10, right: 10, top: 20, bottom: 20 },
            },
          },

          columns: [
            [
              {
                title: "Item ID",
                field: "id",
                align: "center",
                valign: "middle",
                visible: false,
                printIgnore: true,
                rowspan: 2,
              },

              {
                field: "name",
                title: "Full name",
                sortable: true,
                footerFormatter: totalTextFormatter,
                align: "center",
                rowspan: 2,
                valign: "middle",
              },
              {
                field: "email",
                title: "Email",
                sortable: true,
                align: "center",
                rowspan: 2,
                footerFormatter: totalNameFormatter,
                valign: "middle",
              },
              {
                field: "phone",
                title: "Phone",
                sortable: true,
                align: "center",

                rowspan: 2,
                valign: "middle",
              },
              {
                title: "Access",
                align: "center",
                colspan: 2,
                valign: "middle",
                printIgnore: true,
              },
              {
                field: "department",
                title: "Department",
                sortable: true,
                align: "center",
                rowspan: 2,
                valign: "middle",
              },
              {
                field: "operate",
                title: "Item Operate",
                align: "center",
                clickToSelect: false,
                events: window.operateEvents,
                formatter: operateFormatter,
                printIgnore: true,
                rowspan: 2,
                valign: "middle",
              },
            ],
            [
              {
                field: "site",
                title: "Site",
                sortable: true,
                align: "center",
                formatter: siteFormatter,
                printIgnore: true,
              },
              {
                field: "access",
                title: "Type",
                sortable: true,
                align: "center",
                formatter: typeFormatter,
                printIgnore: true,
              },
            ],
          ],
        });

        //$add.click(function () {
        //   $("#addEquipmentModal").modal("toggle");
        // });
      }
      var Toast;
      $(function () {
        initTable();
        Toast = Swal.mixin({
          toast: true,
          position: "bottom-end",
          showConfirmButton: false,
          timer: 3000,
        });
      });
    </script>
    <%- include('partials/modalsIAB') %> <%- include('partials/modalsMEDICEF')%>
  </body>
</html>
